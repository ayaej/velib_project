# Hadoop Core Configuration
CORE_CONF_fs_defaultFS=hdfs://namenode:8020
CORE_CONF_hadoop_http_staticuser_user=root
CORE_CONF_hadoop_proxyuser_hue_hosts=*
CORE_CONF_hadoop_proxyuser_hue_groups=*

# HDFS Configuration
HDFS_CONF_dfs_webhdfs_enabled=true
HDFS_CONF_dfs_permissions_enabled=false
HDFS_CONF_dfs_namenode_datanode_registration_ip___hostname___check=false

# HDFS NameNode Configuration
HDFS_CONF_dfs_namenode_name_dir=file:///hadoop/dfs/name
HDFS_CONF_dfs_namenode_rpc___bind___host=0.0.0.0

# HDFS DataNode Configuration
HDFS_CONF_dfs_datanode_data_dir=file:///hadoop/dfs/data

# Cluster Configuration
CLUSTER_NAME=velib_cluster

# Replication Factor
HDFS_CONF_dfs_replication=1

# Block Size (128MB)
HDFS_CONF_dfs_blocksize=134217728

# Permissions
HDFS_CONF_dfs_permissions_superusergroup=supergroup
